<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <%= link_to 'Contact List', root_url, class: 'navbar-brand' %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if !user_signed_in? %>
        <li class="nav-item active">
          <%= link_to 'Nova Conta', new_user_path, class:"nav-link" %>
        </li>
        <% end %>
        <li class="nav-item">
          <%= link_to 'Sobre', about_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Contato', contato_path, class:"nav-link" %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if !user_signed_in? %>
        <li>
          <%= link_to 'Entrar', entrar_path, class:"nav-link" %>
        </li>
        <% else %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            bem vindo, <%= current_user.name %> <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to 'Minha Pagina', current_user, class:"dropdown-item" %>
            </li>
            <li>
              <%= link_to 'Editar', "#", class:"dropdown-item"%>
            </li>
            <li class="dropdown-divider"></li>
            <li>
              <%= link_to 'Sair', sair_path, method: :delete, class:"dropdown-item" %>
            </li>
          </ul>
        </li>
        <% end %>

      </ul>
    </div>
  </nav>
</header>